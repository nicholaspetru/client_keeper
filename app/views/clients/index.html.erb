<h1>My clients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= user['first_name'] %></td>
        <td><%= user['last_name'] %></td>
        <td><%= user['email'] %></td>
        <td><%= user['address1'] %></td>
        <td><%= user['city'] %></td>
        <td><%= user['state'] %></td>
        <td><%= user['zip'] %></td>
        <td class="cell-link"><%= link_to 'go!', "/clients/#{@local_clients[index][1]}/transactions/new" %></td>
        <td><%= link_to 'view', "/clients/#{@local_clients[index][1]}" %></td>
        <td><%= link_to 'edit', edit_user_path(@local_users[index]) %></td>
        <td><%= link_to 'delete', Client.find(@local_clients[index][1]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

