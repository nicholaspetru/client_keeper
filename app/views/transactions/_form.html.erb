<%= form_with(model: transaction, local: true) do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- TODO: once many-many object created, display client dropdown -->
  <div class="field">
    <%= form.label "Client", class: 'required' %>
    <%= form.password_field :user_token, id: :transaction_user_token, class: 'form-control', :required => true %>
  </div>

  <!-- TODO: based on the user selection, produce list of user cards. Allow addition of user cards from here (link to card form) -->
  <div class="field">
    <%= form.label :card_token, class: 'required' %>
    <%= form.password_field :card_token, id: :transaction_card_token, class: 'form-control', :required => true %>
    <%= link_to 'Add new card', new_card_path %>
  </div>

  <div class="field">
    <%= form.label :amount, class: 'required' %>
    <%= form.password_field :amount, id: :transaction_amount, class: 'form-control', :required => true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
