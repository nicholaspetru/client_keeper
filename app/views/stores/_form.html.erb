<%= form_with(model: store, local: true) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: editing ? '' : 'required' %>
    <%= form.text_field :name, id: :store_name, class: 'form-control', :required => !editing %>
  </div>

  <div class="field">
    <%= form.label :contact_email %>
    <%= form.email_field :contact_email, id: :store_contact_email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :username, class: 'required' %>
    <%= form.text_field :username, id: :store_username, class: 'form-control', :required => true %>
  </div>

  <div class="field">
    <%= form.label :password, class: 'required' %>
    <%= form.password_field :password, id: :store_password, class: 'form-control', :required => true %>
  </div>

  <div class="field">
    <%= form.label :address1, class: editing ? '' : 'required' %>
    <%= form.text_field :address1, id: :store_address1, class: 'form-control', :required => !editing %>
  </div>

  <div class="field">
    <%= form.label :city, class: editing ? '' : 'required' %>
    <%= form.text_field :city, id: :store_city, class: 'form-control', :required => !editing %>
  </div>

  <div class="field">
    <%= form.label :state, class: editing ? '' : 'required' %>
    <%= form.text_field :state, id: :store_state, class: 'form-control', :required => !editing %>
  </div>

  <div class="field">
    <%= form.label :zip, class: editing ? '' : 'required' %>
    <%= form.text_field :zip, id: :store_zip, class: 'form-control', :required => !editing %>
  </div>

  <div class="field">
    <%= form.label :active, editing ? '' : 'required'%>
    <%= form.text_field :active, id: :store_active, class: 'form-control', :required => !editing %>
  </div>

  <div class="actions">
    <%= form.submit editing ? 'Update store' : 'Create store' %>
  </div>
<% end %>
