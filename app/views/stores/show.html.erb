<p id="notice"><%= notice %></p>

<% if current_store.token == @page_store['token'] %>
  <p>
    <strong>Username:</strong>
    <%= @current_store.username %>
  </p>

  <% @store.each do |key, value| %>
    <p>
      <strong><%= key %>:</strong>
      <%= value %>
    </p>
  <% end %>
<% else %>
  <p>
    <strong>Name:</strong>
    <%= @page_store.name %>
  </p>
<% end %>

<% if current_store.token == @page_store['token'] %>
  <%= link_to 'Edit', edit_store_path(@store) %> |
<% end %>
<%= link_to 'Back', stores_path %>
